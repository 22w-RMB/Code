<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ativity.CustomTitleActivity"
    android:orientation="vertical">


    <com.example.customlayouttest.view.CustomTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custom_view_title"
        />

    <com.example.customlayouttest.view.UnderLineTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="50sp"
        ></com.example.customlayouttest.view.UnderLineTextView>

    <com.example.customlayouttest.view.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.example.customlayouttest.view.UnderLineTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="50sp"
            ></com.example.customlayouttest.view.UnderLineTextView>
    </com.example.customlayouttest.view.ForegroundLinearLayout>
    <com.example.customlayouttest.view.HistogramView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.example.customlayouttest.view.HistogramView>


</LinearLayout>